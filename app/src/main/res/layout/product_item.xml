<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/light"
    android:id="@+id/item_view__cv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@null"
    android:layout_margin="@dimen/half_of_default_margin"
    app:cardCornerRadius="@dimen/corner_radius"
    app:cardElevation="0dp"
    app:strokeColor="@color/blue"
    app:strokeWidth="@dimen/stroke_width">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/item_default_margin"
            android:layout_marginStart="@dimen/item_default_margin"
            android:layout_marginBottom="@dimen/item_default_margin"
            android:orientation="vertical">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/image"
                android:layout_width="@dimen/item_image"
                android:layout_height="@dimen/item_image"
                android:layout_margin="@dimen/item_default_margin"
                android:adjustViewBounds="true"
                android:background="@null"
                android:scaleType="centerCrop"
                app:shapeAppearance="@style/rounded"
                app:strokeColor="@color/blue"
                app:strokeWidth="@dimen/stroke_width" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/more"
                android:layout_width="@dimen/item_image"
                android:layout_height="@dimen/button_height"
                android:layout_margin="@dimen/item_default_margin"
                android:background="@drawable/button_more"
                android:text="@string/more"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/light"
                android:textSize="@dimen/button_text_size"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/linear_margin"
            android:layout_marginTop="@dimen/item_default_margin"
            android:layout_marginEnd="@dimen/item_default_margin"
            android:layout_marginBottom="@dimen/item_default_margin"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/item_margin"
                android:textColor="@color/black"
                android:textSize="@dimen/item_text_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/item_margin"
                android:textColor="@color/black"
                android:textSize="@dimen/item_text_size" />

            <TextView
                android:id="@+id/price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/item_margin"
                android:textColor="@color/blue"
                android:textSize="@dimen/item_text_size" />

        </LinearLayout>
    </LinearLayout>


</com.google.android.material.card.MaterialCardView>
